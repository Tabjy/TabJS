doctype html
html(lang="en")
  head
    title #{message} | HTTP #{statusCode}
    style.
      body{
        background-color: #F0F0F0;
        font-family: Helvetica, Arial, sans-serif;
        font-size: 10pt;
        padding-top: 50px;
        text-align: left;
      }
      a { 
        color: #666;
        text-decoration: none;
        border-bottom: 1px dashed #666;
      }
      a:hover {
        border-bottom: 1px solid #666;
      }
      .container {
        margin: auto;
        max-width: 700px;
        min-width: 200px;
      }
      .box hr {
        diplay: block;
        border: none;
        border-bottom: 1px dashed #ccc;
      }
      .box {
        background-color: #fbfbfb;
        border: 1px solid #AAA;
        border-bottom: 1px solid #888;
        border-radius: 3px;
        color: black;
        box-shadow: 0px 2px 2px #AAA;
        padding: 20px;
      }
      .box h1, .box h2 {
        display: block;
        text-align: center;
      }
      .box h1 {
        color: #666;
        font-weight: normal;
        font-size: 50px;
        padding: 0;
        margin: 0;
        margin-top: 10px;
        line-height:50px
      }
      .box h2 {
        color: #666;
        font-weight: normal;
        font-size: 1.5em;
      }
      .box p {
        display: block;
        margin-bottom: 10px;
      }
      .box ul li {
        margin-bottom: 7px;
      }

      .box pre {
        background-color: #F8F8F8 ;
        overflow-x: auto;
        border: 1px solid #AAA;
        border-bottom: 1px solid #888;
        border-radius: 3px;
        color: black;
        padding: 20px;
      }
      .serverinfo {
        display: block;
        text-align: center;
        color: #999;
        font-weight: normal;
        margin-top: 20px;
      }
  body
    .container
      .box
        h1 HTTP #{statusCode}
        h2 #{message}
        hr
        p #{description}
        p Request Detail:
        ul
          li Request URL: #{url}
          li Host: #{host}
          li Method: #{method}
          li Client IP: #{ip}
          li Timestamp: #{timestamp}
        
        #showStack
          if showStack
            p Error stack dumped below:
            pre #{stack}  

    .serverinfo
      | Powered by 
      a(href="https://github.com/Tabjy/TabJS" target="_blank") TabJS
      |  version #{version} (build #{build})
